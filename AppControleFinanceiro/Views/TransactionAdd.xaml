<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppControleFinanceiro.Views.TransactionAdd"
             Title="TransactionAdd">
    <VerticalStackLayout>
        <Border BackgroundColor="Black" Stroke="Transparent" Margin="15" Padding="15" StrokeShape="RoundRectangle 30">
            <Grid RowDefinitions="Auto" ColumnDefinitions="*, 30">
                <Label Text="Novo" TextColor="White" HorizontalOptions="Center" VerticalOptions="Center" Grid.Row="0" Grid.Column="0"/>
                <Image Source="close.png" 
                       HorizontalOptions="Center" 
                       Grid.Row="0" 
                       Grid.Column="1" 
                       WidthRequest="17">
                    <Image.GestureRecognizers>
                        <TapGestureRecognizer Tapped="OnImageTapped" />
                    </Image.GestureRecognizers>
                </Image>
            </Grid>
        </Border>

        <Grid ColumnDefinitions="*,*" Margin="30, 10">
            <RadioButton IsChecked="True" Content="Receita"  TextColor="Black"/>
            <RadioButton HorizontalOptions="End" Grid.Column="1" Content="Despesa" TextColor="Black"/>
        </Grid>

        <Entry Placeholder="Nome" Margin="30, 10" />
        <DatePicker Margin="30, 10" TextColor="Black" Format="dd/MM/yyyy"/>
        <Entry Placeholder="Valor" Margin="30, 10" />
        <Button Text="Salvar" Margin="30, 10" HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>